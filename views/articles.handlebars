<div class="container article-container">
    {{#each articleSchema}}
    <div class="card">
        <div class="card-header">
            <h3>{{this._id}}</h3>
        </div>
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">{{this.summary}}</p>
            {{!-- <p class="card-text">{{this.link}}</p> --}}
            <a href="https://www.gameinformer.com{{this.link}}" target="_blank">{{this.link}}</a>
            <br>
            <div class="d-flex justify-content-end">
            <a href="#" class="btn btn-lg btn-success">Make a note and save the article!</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>

